# Application Settings
APP_NAME=Stellecta API
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://stellecta:dev_password@postgres:5432/stellecta

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
LUCIDAI_ENDPOINT=https://api.lucidai.com/v1
LUCIDAI_API_KEY=lucid-...

# Stellar Blockchain
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_ISSUER_SECRET=S...
STELLAR_ISSUER_PUBLIC=G...

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Gamification Settings
XP_PER_MESSAGE=10
XP_PER_CORRECT_ANSWER=50
STREAK_BONUS_XP=20

# LLM Router
DEFAULT_LLM_PROVIDER=lucidai
MAX_TOKENS=1000
TEMPERATURE=0.7

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
