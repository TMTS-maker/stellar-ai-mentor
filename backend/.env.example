# Stellecta LucidAI Backend - Environment Configuration
# Copy this file to .env and fill in real values

# ============================================================================
# CORE APPLICATION
# ============================================================================
APP_NAME=Stellecta LucidAI Backend
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://stellecta:stellecta@localhost:5432/stellecta_dev
# For production, use format: postgresql://user:password@host:port/dbname

# ============================================================================
# REDIS (Caching & Queue)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=__CHANGE_THIS_TO_RANDOM_SECRET_KEY__
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# EXTERNAL LLM PROVIDERS (Placeholders - replace with real keys)
# ============================================================================

# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=__OPENAI_API_KEY__
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Google Gemini (Gemini 2.5 Flash)
GEMINI_API_KEY=__GEMINI_API_KEY__
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=2000

# Anthropic Claude (Claude 3.5 Sonnet)
ANTHROPIC_API_KEY=__ANTHROPIC_API_KEY__
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
ANTHROPIC_MAX_TOKENS=2000

# Perplexity
PERPLEXITY_API_KEY=__PERPLEXITY_API_KEY__
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online

# DeepSeek
DEEPSEEK_API_KEY=__DEEPSEEK_API_KEY__
DEEPSEEK_MODEL=deepseek-chat

# ============================================================================
# STELLECTA LUCIDAI (Internal/Proprietary LLM)
# ============================================================================
LUCIDAI_API_URL=__LUCIDAI_API_URL__
LUCIDAI_API_KEY=__LUCIDAI_API_KEY__
LUCIDAI_MODEL=lucidai-v1.0-stella
LUCIDAI_MAX_TOKENS=2000
LUCIDAI_TIMEOUT=30

# ============================================================================
# MULTI-LLM ROUTER CONFIGURATION
# ============================================================================
DEFAULT_LLM_PROVIDER=gemini  # Options: lucidai, gemini, openai, claude
FALLBACK_LLM_PROVIDER=openai
ENABLE_HYBRID_MODE=true
ROUTING_CONFIDENCE_THRESHOLD=0.85

# ============================================================================
# STELLAR BLOCKCHAIN (Credentials & Tokenization)
# ============================================================================
STELLAR_NETWORK=testnet  # Options: testnet, mainnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_ISSUER_PUBLIC_KEY=__STELLAR_ISSUER_PUBLIC_KEY__
STELLAR_ISSUER_SECRET_KEY=__STELLAR_ISSUER_SECRET_KEY__

# ============================================================================
# TRAINING DATA PIPELINE
# ============================================================================
ENABLE_TRAINING_LOGGING=true
ANONYMIZE_TRAINING_DATA=true
TRAINING_DATA_RETENTION_DAYS=365

# ============================================================================
# H-PEM & LCT CONFIGURATION
# ============================================================================
HPEM_PROFICIENCY_WEIGHT=0.3
HPEM_RESILIENCE_WEIGHT=0.2
HPEM_VELOCITY_WEIGHT=0.2
HPEM_ENGAGEMENT_WEIGHT=0.15
HPEM_TRANSFER_WEIGHT=0.15

# ============================================================================
# GAMIFICATION
# ============================================================================
XP_PER_TASK_COMPLETION=50
XP_PER_MASTERY_ACHIEVEMENT=200
STREAK_BONUS_MULTIPLIER=1.5

# ============================================================================
# CORS (Frontend URLs)
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# For production, replace with actual frontend URL

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
