# Application
APP_NAME="Stellar AI Backend"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stellar_ai

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8080"]

# AI Service Providers
LLM_PROVIDER=openai
# Options: openai, anthropic

# OpenAI API (for GPT-4, Whisper STT)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API (for Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Speech Services
# WHISPER_API_KEY is same as OPENAI_API_KEY
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Avatar Services
HEYGEN_API_KEY=your-heygen-api-key-here
DID_API_KEY=your-did-api-key-here
